{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "outDir": "./js",
        "rootDir": "./ts",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["ts/**/*"]
}